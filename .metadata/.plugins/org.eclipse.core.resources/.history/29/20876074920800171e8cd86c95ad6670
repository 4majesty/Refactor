package org.eclipse.jdt.internal.ui.javaeditor;

import org.eclipse.swt.graphics.Point;
import org.eclipse.jface.preference.IPreferenceStore;
import org.eclipse.jface.util.PropertyChangeEvent;
import org.eclipse.jface.text.ITextPresentationListener;
import org.eclipse.jface.text.formatter.IFormattingContext;
import org.eclipse.jface.text.source.SourceViewerConfiguration;
import org.eclipse.jdt.internal.ui.text.SmartBackspaceManager;
import org.eclipse.jdt.internal.ui.text.ISmartBackspaceManager;

public interface IJavaSourceViewer {
	IFormattingContext createFormattingContext();

	void doOperation(int operation);

	boolean canDoOperation(int operation);

	void configure(SourceViewerConfiguration configuration);

	void unconfigure();

	Point rememberSelection();

	void restoreSelection();

	void propertyChange(PropertyChangeEvent event);

	void setPreferenceStore(IPreferenceStore store);

	SmartBackspaceManager getBackspaceManager();

	void prependTextPresentationListener(ITextPresentationListener listener);
}
