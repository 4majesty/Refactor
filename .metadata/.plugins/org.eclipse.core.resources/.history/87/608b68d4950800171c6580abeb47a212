public interface ICompilationUnitRewrite {
	void rememberContent();

	void setResolveBindings(boolean resolve);

	void setStatementsRecovery(boolean statementsRecovery);

	void setBindingRecovery(boolean bindingsRecovery);

	void clearASTRewrite();

	void clearImportRewrites();

	void clearASTAndImportRewrites();

	CategorizedTextEditGroup createCategorizedGroupDescription(String name, GroupCategorySet set);

	TextEditGroup createGroupDescription(String name);

	CompilationUnitChange createChange();

	CompilationUnitChange createChange(boolean generateGroups, IProgressMonitor monitor) throws CoreException;

	CompilationUnitChange createChange(String name, boolean generateGroups, IProgressMonitor monitor) throws CoreException;

	CompilationUnitChange attachChange(CompilationUnitChange cuChange, boolean generateGroups, IProgressMonitor monitor) throws CoreException;

	ICompilationUnit getCu();

	CompilationUnit getRoot();

	AST getAST();

	ASTRewrite getASTRewrite();

	ImportRewrite getImportRewrite();

	ImportRemover getImportRemover();

	void clearGroupDescriptions();
}
