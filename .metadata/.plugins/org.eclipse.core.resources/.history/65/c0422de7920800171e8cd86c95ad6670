	IJavaElement resolveEnclosingElement();

	CompilationUnit resolvePartialAstAtOffset();

	ASTNode[] resolveSelectedNodes();

	ASTNode resolveCoveringNode();

	boolean resolveInMethodBody();

	boolean resolveInClassInitializer();

	boolean resolveInVariableInitializer();
}
