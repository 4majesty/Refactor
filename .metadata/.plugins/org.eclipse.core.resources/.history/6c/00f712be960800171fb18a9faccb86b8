package org.eclipse.jdt.internal.ui.refactoring;

import org.eclipse.swt.graphics.Image;
import org.eclipse.swt.widgets.Composite;
import org.eclipse.jdt.internal.ui.util.SWTUtil;
import org.eclipse.jdt.internal.ui.util.TableLayoutComposite;
import org.eclipse.jdt.internal.corext.refactoring.structure.IPushDownRefactoringProcessor;

public interface IPushDownWizard {
	void dispose();

	Image getColumnImage(final Object element, final int index);

	String getColumnText(final Object element, final int index);

	boolean canModify(final Object element, final String property);

	Object getValue(final Object element, final String property);

	void modify(final Object element, final String property, final Object value);

	void createControl(final Composite parent);

	void markAdditionalRequiredMembersAsMembersToPushDown();

	void setVisible(final boolean visible);
}
