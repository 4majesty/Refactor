package org.eclipse.jdt.internal.ui.viewsupport;

import org.eclipse.jface.text.templates.Template;
import org.eclipse.jface.text.templates.persistence.TemplatePersistenceData;
import org.eclipse.jdt.ui.JavaUI;
import org.eclipse.jdt.internal.ui.JavaPlugin;

public interface IProjectTemplateStore {
	TemplatePersistenceData[] getTemplateData();

	Template findTemplateById(String id);

	void load();

	boolean isProjectSpecific(String id);

	void setProjectSpecific(String id, boolean projectSpecific);

	void restoreDefaults();

	void save();

	void revertChanges();
}
