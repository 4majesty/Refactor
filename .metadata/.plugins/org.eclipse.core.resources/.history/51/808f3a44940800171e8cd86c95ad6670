package org.eclipse.jdt.ui.actions;

import org.eclipse.core.runtime.Assert;
import org.eclipse.core.runtime.IAdaptable;
import org.eclipse.core.runtime.ListenerList;
import org.eclipse.core.resources.IResource;
import org.eclipse.jface.viewers.ISelection;
import org.eclipse.jface.viewers.ISelectionChangedListener;
import org.eclipse.jface.viewers.ISelectionProvider;
import org.eclipse.jface.viewers.IStructuredSelection;
import org.eclipse.jface.viewers.SelectionChangedEvent;
import org.eclipse.jface.viewers.StructuredSelection;
import org.eclipse.jdt.core.IJavaElement;

public interface IConvertingSelectionProvider {
	void selectionChanged(SelectionChangedEvent event);

	void addListener(ISelectionChangedListener listener);

	void removeListener(ISelectionChangedListener listener);

	boolean isEmpty();

	ISelection convertFrom(ISelection viewerSelection);

	ISelection convertTo(ISelection selection);

	ISelection getSelection();

	void setSelection(ISelection selection);

	void addSelectionChangedListener(ISelectionChangedListener listener);

	void removeSelectionChangedListener(ISelectionChangedListener listener);
}
