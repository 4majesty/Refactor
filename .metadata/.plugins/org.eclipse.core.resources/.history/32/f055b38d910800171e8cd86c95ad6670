package org.eclipse.jdt.internal.ui.actions;

import java.lang.reflect.InvocationTargetException;
import org.eclipse.core.runtime.IProgressMonitor;
import org.eclipse.core.runtime.jobs.ISchedulingRule;
import org.eclipse.jdt.internal.ui.JavaUIStatus;

public interface IWorkbenchRunnableAdapter {
	ISchedulingRule getSchedulingRule();

	void threadChange(Thread thread);

	void run(IProgressMonitor monitor) throws InvocationTargetException, InterruptedException;

	void runAsUserJob(String name, final Object jobFamiliy);
}
