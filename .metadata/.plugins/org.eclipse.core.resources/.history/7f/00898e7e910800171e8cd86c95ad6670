package org.eclipse.jdt.internal.ui.wizards;

import org.eclipse.swt.widgets.Composite;
import org.eclipse.core.runtime.CoreException;
import org.eclipse.core.runtime.IProgressMonitor;
import org.eclipse.core.resources.IResource;
import org.eclipse.jface.viewers.IStructuredSelection;
import org.eclipse.jdt.core.IPackageFragmentRoot;
import org.eclipse.jdt.internal.ui.wizards.dialogfields.DialogField;
import org.eclipse.jdt.internal.ui.wizards.dialogfields.SelectionButtonDialogField;
import org.eclipse.jdt.internal.ui.wizards.dialogfields.StringButtonDialogField;

public interface INewSourceFolderWizardPage {
	void init(IStructuredSelection selection);

	void createControl(Composite parent);

	void setVisible(boolean visible);

	void changeControlPressed(DialogField field);

	void dialogFieldChanged(DialogField field);

	IPackageFragmentRoot getNewPackageFragmentRoot();

	IResource getCorrespondingResource();

	void createPackageFragmentRoot(IProgressMonitor monitor) throws CoreException, InterruptedException;
}
