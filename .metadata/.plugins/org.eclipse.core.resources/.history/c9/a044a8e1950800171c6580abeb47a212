public interface ITextEditBasedChangeManager {
	void manage(ICompilationUnit cu, TextEditBasedChange change);

	TextEditBasedChange get(ICompilationUnit cu);

	TextEditBasedChange remove(ICompilationUnit unit);

	TextEditBasedChange[] getAllChanges();

	ICompilationUnit[] getAllCompilationUnits();

	void clear();

	boolean containsChangesIn(ICompilationUnit cu);
}
