public interface ICompilationUnitEditor {
	IContentAssistant getContentAssistant();

	void doOperation(int operation);

	boolean requestWidgetToken(IWidgetTokenKeeper requester);

	boolean requestWidgetToken(IWidgetTokenKeeper requester, int priority);

	IFormattingContext createFormattingContext();

	ExitFlags doExit(LinkedModeModel model, VerifyEvent event, int offset, int length);

	void update(DocumentEvent event);

	void setCloseBracketsEnabled(boolean enabled);

	void setCloseStringsEnabled(boolean enabled);

	void setCloseAngularBracketsEnabled(boolean enabled);

	void verifyKey(VerifyEvent event);

	void left(LinkedModeModel environment, int flags);

	void suspend(LinkedModeModel environment);

	void resume(LinkedModeModel environment, int flags);

	void remember();

	void restore();

	void setOffset(int offset);

	int getOffset();

	int getRememberedOffset(IJavaElement newElement);

	int getRevealOffset(IJavaElement element, int offset);

	IJavaElement getElement();

	void clear();

	void editorContextMenuAboutToShow(IMenuManager menu);

	void doSave(IProgressMonitor progressMonitor);

	boolean isSaveAsAllowed();

	void dispose();

	void createPartControl(Composite parent);

	void aboutToBeReconciled();

	void reconciled(CompilationUnit ast, boolean forced, IProgressMonitor progressMonitor);

	Object getAdapter(Class required);

	Object getReconcilerLock();
}
