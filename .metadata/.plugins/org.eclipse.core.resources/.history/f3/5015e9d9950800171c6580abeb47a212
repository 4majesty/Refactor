package org.eclipse.jdt.internal.corext.refactoring.util;

import java.util.Set;
import org.eclipse.ltk.core.refactoring.TextChange;
import org.eclipse.jdt.core.ICompilationUnit;
import org.eclipse.jdt.core.refactoring.CompilationUnitChange;

public interface ITextChangeManager {
	void manage(ICompilationUnit cu, TextChange change);

	TextChange get(ICompilationUnit cu);

	TextChange remove(ICompilationUnit unit);

	TextChange[] getAllChanges();

	ICompilationUnit[] getAllCompilationUnits();

	void clear();

	boolean containsChangesIn(ICompilationUnit cu);
}
