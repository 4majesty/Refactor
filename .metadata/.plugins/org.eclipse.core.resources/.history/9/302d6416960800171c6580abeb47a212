import org.eclipse.jdt.internal.corext.refactoring.reorg.RefactoringModifications;

public interface IRenameModifications {
	void rename(IResource resource, RenameArguments args);

	void rename(IJavaProject project, RenameArguments args);

	void rename(IPackageFragmentRoot sourceFolder, RenameArguments arguments);

	void rename(IPackageFragment rootPackage, RenameArguments args, boolean renameSubPackages) throws CoreException;

	void rename(ICompilationUnit unit, RenameArguments args);

	void rename(IType type, RenameTypeArguments args, IParticipantDescriptorFilter filter);

	void rename(IField field, RenameArguments args);

	void rename(IMethod method, RenameArguments args);

	void rename(ILocalVariable variable, RenameArguments args);

	void rename(ITypeParameter typeParameter, RenameArguments arguments);

	void buildDelta(IResourceChangeDescriptionFactory builder);

	void buildValidateEdits(ValidateEditChecker checker);

	RefactoringParticipant[] loadParticipants(RefactoringStatus status, RefactoringProcessor owner, String[] natures, SharableParticipants shared);
}
