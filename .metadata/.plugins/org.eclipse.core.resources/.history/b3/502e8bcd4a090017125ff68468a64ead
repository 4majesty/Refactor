package com.successfactors.cdp.service.util.mentoring;

import static org.testng.Assert.assertEquals;
import static org.testng.Assert.assertNotEquals;

import java.text.SimpleDateFormat;
import java.util.Calendar;
import java.util.Date;
import java.util.TimeZone;

import org.testng.annotations.Test;


public class MentoringDateUtilsTest {


  @Test(groups = {"checkin"})
  public void testCalculateDate0Hours() throws Exception {
    SimpleDateFormat format = new SimpleDateFormat("dd/MM/yyyy HH:mm");
    Date date = format.parse("01/01/2017 13:00");

    Date local0Hour = MentoringDateUtils.calculateDate0Hour(date, TimeZone.getDefault());

    assertNotEquals(date, local0Hour);
    Calendar cal = Calendar.getInstance();
    cal.setTime(local0Hour);
    
    assertEquals(cal.get(Calendar.HOUR_OF_DAY), 0);
  }

}
