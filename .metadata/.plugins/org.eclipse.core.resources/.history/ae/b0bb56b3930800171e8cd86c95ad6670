import org.eclipse.jface.viewers.IStructuredSelection;

public interface IClasspathModifierDropDownAction {
	String getDetailedDescription();

	void run();

	IMenuCreator getMenuCreator();

	Menu getMenu(Control parent);

	Menu getMenu(Menu parent);

	void addAction(BuildpathModifierAction action);

	void removeAction(BuildpathModifierAction action);

	void dispose();
}
