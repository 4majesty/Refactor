import org.eclipse.jdt.internal.ui.IJavaStatusConstants;
import org.eclipse.jdt.internal.ui.JavaPlugin;

public interface IJarPackageReader {
	void read(JarPackageData jarPackage) throws CoreException;

	void close();

	JarPackageData readXML(JarPackageData jarPackage) throws IOException, SAXException;

	IStatus getStatus();
}
