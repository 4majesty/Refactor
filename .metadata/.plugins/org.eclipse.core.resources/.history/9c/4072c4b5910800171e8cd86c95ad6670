package org.eclipse.jdt.internal.ui.wizards.buildpaths;

import org.eclipse.core.runtime.IPath;
import org.eclipse.core.runtime.IStatus;
import org.eclipse.core.resources.IResource;
import org.eclipse.jdt.core.IClasspathEntry;
import org.eclipse.jdt.core.IJavaProject;
import org.eclipse.jdt.internal.ui.JavaPlugin;

public interface ICPListElement {
	IClasspathEntry getClasspathEntry();

	IPath getPath();

	int getEntryKind();

	IResource getResource();

	CPListElementAttribute setAttribute(String key, Object value);

	boolean addToExclusions(IPath path);

	boolean addToInclusion(IPath path);

	boolean removeFromExclusions(IPath path);

	boolean removeFromInclusion(IPath path);

	CPListElementAttribute findAttributeElement(String key);

	Object getAttribute(String key);

	CPListElementAttribute[] getAllAttributes();

	Object[] getChildren(boolean hideOutputFolder);

	Object getParentContainer();

	IStatus getContainerChildStatus(CPListElementAttribute attrib);

	boolean isInContainer(String containerName);

	boolean isDeprecated();

	String getDeprecationMessage();

	boolean equals(Object other);

	int hashCode();

	String toString();

	boolean isMissing();

	boolean hasMissingChildren();

	void setIsMissing(boolean isMissing);

	boolean isExported();

	void setExported(boolean isExported);

	IJavaProject getJavaProject();

	StringBuffer appendEncodedSettings(StringBuffer buf);

	IPath getLinkTarget();

	void setPath(IPath path);

	void setLinkTarget(IPath linkTarget);

	IPath getOrginalPath();

	IPath getOrginalLinkTarget();

	CPListElement copy();

	void setAttributesFromExisting(CPListElement existing);
}
