package org.eclipse.jdt.internal.ui.compare;

import org.eclipse.swt.widgets.Shell;
import org.eclipse.core.runtime.IStatus;
import org.eclipse.compare.structuremergeviewer.Differencer;
import org.eclipse.compare.structuremergeviewer.IDiffContainer;
import org.eclipse.compare.structuremergeviewer.IStructureComparator;
import org.eclipse.jdt.internal.ui.JavaPlugin;

public interface IJavaStructureCreator {
	boolean isEditable();

	void dispose();

	Object getAdapter(Class adapter);

	boolean isReadOnly();

	IStatus validateEdit(Shell shell);

	String getName();

	IStructureComparator getStructure(final Object input);

	String getContents(Object node, boolean ignoreWhiteSpace);

	boolean canRewriteTree();

	void rewriteTree(Differencer differencer, IDiffContainer root);
}
