public interface ITypeHierarchyLifeCycle {
	ITypeHierarchy getHierarchy();

	IJavaElement getInputElement();

	void freeHierarchy();

	void removeChangedListener(ITypeHierarchyLifeCycleListener listener);

	void addChangedListener(ITypeHierarchyLifeCycleListener listener);

	void ensureRefreshedTypeHierarchy(final IJavaElement element, IRunnableContext context) throws InvocationTargetException, InterruptedException;

	void doHierarchyRefresh(IJavaElement element, IProgressMonitor pm) throws JavaModelException;

	void typeHierarchyChanged(ITypeHierarchy typeHierarchy);

	void elementChanged(ElementChangedEvent event);
}
