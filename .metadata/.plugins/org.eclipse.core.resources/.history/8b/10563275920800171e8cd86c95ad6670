package org.eclipse.jdt.internal.ui.javaeditor.breadcrumb;

import org.eclipse.swt.graphics.Image;
import org.eclipse.swt.graphics.Rectangle;
import org.eclipse.swt.widgets.Composite;
import org.eclipse.swt.widgets.Item;
import org.eclipse.swt.widgets.Shell;
import org.eclipse.jface.viewers.ILabelProvider;
import org.eclipse.jface.viewers.ISelectionProvider;
import org.eclipse.jface.viewers.ITreeContentProvider;

public interface IBreadcrumbItem {
	BreadcrumbViewer getViewer();

	void setContentProvider(ITreeContentProvider contentProvider);

	void setLabelProvider(ILabelProvider labelProvider);

	void setToolTipLabelProvider(ILabelProvider toolTipLabelProvider);

	void dispose();

	Rectangle getBounds();

	void setToolTip(String text);

	void setText(String string);

	void setImage(Image image);
}
