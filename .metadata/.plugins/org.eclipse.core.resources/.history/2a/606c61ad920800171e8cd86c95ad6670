package org.eclipse.jdt.internal.ui.jarpackagerfat;

import java.io.File;
import org.eclipse.swt.widgets.Shell;
import org.eclipse.core.runtime.CoreException;
import org.eclipse.core.runtime.IPath;
import org.eclipse.core.runtime.MultiStatus;
import org.eclipse.core.resources.IFile;
import org.eclipse.jdt.ui.jarpackager.JarPackageData;
import org.eclipse.jdt.internal.ui.jarpackager.JarBuilder;

public interface IFatJarBuilder {
	boolean isRemoveSigners();

	boolean isMergeManifests();

	String getManifestClasspath();

	void open(JarPackageData jarPackage, Shell displayShell, MultiStatus status) throws CoreException;

	void writeFile(IFile resource, IPath destinationPath) throws CoreException;

	void writeFile(File file, IPath destinationPath) throws CoreException;

	void close();
}
