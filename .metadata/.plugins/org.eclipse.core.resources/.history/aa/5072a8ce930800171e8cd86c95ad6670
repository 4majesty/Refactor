import org.eclipse.jdt.internal.corext.buildpath.IBuildpathModifierListener;
import org.eclipse.jdt.internal.ui.JavaPlugin;

public interface IBuildpathModifierAction {
	String getDetailedDescription();

	void selectionChanged(final SelectionChangedEvent event);

	void addBuildpathModifierListener(IBuildpathModifierListener listener);

	void removeBuildpathModifierListener(IBuildpathModifierListener listener);
}
