package org.eclipse.jdt.internal.ui.packageview;

import org.eclipse.jface.action.IMenuManager;
import org.eclipse.jface.action.IToolBarManager;
import org.eclipse.ui.IActionBars;
import org.eclipse.ui.views.framelist.FrameAction;
import org.eclipse.ui.views.framelist.FrameList;
import org.eclipse.jdt.ui.actions.CustomFiltersActionGroup;
import org.eclipse.jdt.internal.ui.workingsets.ViewActionGroup;
import org.eclipse.jdt.ui.actions.IRefactorActionGroup;
import org.eclipse.jdt.ui.actions.IProjectActionGroup;
import org.eclipse.jdt.ui.actions.ICustomFiltersActionGroup;

public interface IPackageExplorerActionGroup {
	void dispose();

	void fillActionBars(IActionBars actionBars);

	void updateToolBar(IToolBarManager toolBar);

	void fillContextMenu(IMenuManager menu);

	FrameAction getUpAction();

	FrameAction getBackAction();

	FrameAction getForwardAction();

	ViewActionGroup getWorkingSetActionGroup();

	CustomFiltersActionGroup getCustomFilterActionGroup();

	FrameList getFrameList();
}
